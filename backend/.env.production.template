# rMirror Cloud - Production Environment Configuration (Hetzner)
# This template is for production deployment on Hetzner VPS

# =============================================================================
# DATABASE - PostgreSQL (Hetzner)
# =============================================================================
# Use PostgreSQL connection string OR individual components (not both)

# Option 1: Full connection string
# DATABASE_URL=postgresql://rmirror:PASSWORD@localhost:5432/rmirror

# Option 2: Individual components (recommended for easier management)
POSTGRES_USER=rmirror
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_HOST=localhost  # Use localhost if PostgreSQL is on same VPS
POSTGRES_PORT=5432
POSTGRES_DB=rmirror

# =============================================================================
# REDIS (optional - for background job processing)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# STORAGE - Hetzner Storage Box or Backblaze B2
# =============================================================================
# For Hetzner Storage Box (S3-compatible via WebDAV):
# Note: Hetzner Storage Box requires additional setup for S3 compatibility
# Consider using Backblaze B2 or Wasabi for easier S3-compatible storage

# For Backblaze B2 (recommended - â‚¬0.005/GB/month):
# S3_ENDPOINT_URL=https://s3.eu-central-003.backblazeb2.com
# S3_ACCESS_KEY=your_b2_key_id
# S3_SECRET_KEY=your_b2_application_key
# S3_BUCKET_NAME=rmirror-prod
# S3_REGION=eu-central-003

# For Wasabi (fast, S3-compatible):
S3_ENDPOINT_URL=https://s3.eu-central-1.wasabisys.com
S3_ACCESS_KEY=CHANGE_ME
S3_SECRET_KEY=CHANGE_ME
S3_BUCKET_NAME=rmirror-prod
S3_REGION=eu-central-1

# =============================================================================
# CLAUDE API
# =============================================================================
CLAUDE_API_KEY=sk-ant-api03-your-production-api-key-here

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_RANDOM_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=false
APP_NAME=rMirror Cloud API
API_VERSION=v1

# =============================================================================
# CORS (adjust for your frontend domain)
# =============================================================================
# CORS_ORIGINS=["https://rmirror.yourdomain.com", "https://www.rmirror.yourdomain.com"]
