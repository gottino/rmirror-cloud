# rMirror Cloud - Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# For local development with SQLite (default):
DATABASE_URL=sqlite:///./rmirror.db

# For production with PostgreSQL (comment out DATABASE_URL above and uncomment below):
# POSTGRES_USER=rmirror
# POSTGRES_PASSWORD=your_secure_password_here
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=rmirror

# =============================================================================
# REDIS (for background jobs - optional for local dev)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# STORAGE (S3-compatible)
# =============================================================================
# For local development with MinIO:
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=rmirror
S3_REGION=us-east-1

# For production with Hetzner Storage Box or Backblaze B2:
# S3_ENDPOINT_URL=https://s3.eu-central-1.wasabisys.com  # or your provider
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
# S3_BUCKET_NAME=rmirror-prod
# S3_REGION=eu-central-1

# =============================================================================
# CLAUDE API (for OCR)
# =============================================================================
CLAUDE_API_KEY=sk-ant-api03-your-api-key-here

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# =============================================================================
# CLERK AUTHENTICATION (required in production)
# =============================================================================
# CLERK_JWKS_URL=https://your-app.clerk.accounts.dev/.well-known/jwks.json
# CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=true  # Set to false in production
